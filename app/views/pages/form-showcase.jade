extends ../layout

block content
	// main container
	.content
		// settings changer
		.skins-nav
			a.skin.first_nav.selected(href='#')
				span.icon
				span.text Default
			a.skin.second_nav(href='#', data-file='css/skins/dark.css')
				span.icon
				span.text Dark skin
		.container-fluid
			#pad-wrapper.form-page
				.row-fluid.form-wrapper
					// left column
					.span8.column
						form
							.field-box
								label 申请人:
								input.span8(type='text', readonly='readonly', value='员工A')
							.field-box
								label 职    位:
								input.span8(type='text', readonly='readonly', value='职位A')
							.field-box
								label 部    门:
								input.span8(type='text', readonly='readonly', value='部门A')
							.field-box
								label 请假类别:
								select.select2(style='width:250px')
									option
										| 请选择假期类型
									option(value='00')
										| 事假
									option(value='01')
										| 年假
									option(value='02')
										| 病假
									option(value='03')
										| 婚假
									option(value='04')
										| 产假
									option(value='05')
										| 丧假
									option(value='06')
										| *假
									option(value='07')
										| *假
									option(value='08')
										| *假
							.field-box
								label 开始时间:
								input.input-large.datepicker(type='text', value='12/01/2016')
							.field-box
								label 请假时长（天）:
								.ui-select
									select
										option(selected='')
											| 请先选择假期类型
										option(value='00')
											| 0.5
										option(value='01')
											| 1
										option(value='02')
											| 2
										option(value='03')
											| 3
										option(value='04')
											| 4
										option(value='05')
											| 5
							.field-box
								label 申请理由:
								textarea.span8(rows='4')
							.field-box
								a.btn-glow.primary(href='/') 提交
								//a的href='/user/signin'
					// right column
					.span4.column.pull-right
						form
							h3 您当前剩余各类假期天数
							br
							.field-box
								label 事假:
								input.span8.inline-input(type='text', readonly='readonly', value='*天')
							.field-box
								label 年假:
								input.span8.inline-input(type='text', readonly='readonly', value='*天')
							.field-box
								label 病假:
								input.span8.inline-input(type='text', readonly='readonly', value='*天')
							.field-box
								label 婚假:
								input.span8.inline-input(type='text', readonly='readonly', value='*天')
							.field-box
								label 产假:
								input.span8.inline-input(type='text', readonly='readonly', value='*天')
							.field-box
								label 丧假:
								input.span8.inline-input(type='text', readonly='readonly', value='*天')
	// end main container
	// scripts for this page
	script(src='js/wysihtml5-0.3.0.js')
	script(src='http://code.jquery.com/jquery-latest.js')
	script(src='js/bootstrap.min.js')
	script(src='js/bootstrap-wysihtml5-0.0.2.js')
	script(src='js/bootstrap.datepicker.js')
	script(src='js/jquery.uniform.min.js')
	script(src='js/select2.min.js')
	script(src='js/theme.js')
	// call this page plugins
	script(type='text/javascript').
		$(function () {
		// add uniform plugin styles to html elements
		$("input:checkbox, input:radio").uniform();
		// select2 plugin for select elements
		$(".select2").select2({
			placeholder: "Select a State"
		});
		$(".select2").change(function(){
			if($(this).val()==='00'){
				$(".ui-select option[value='02']").remove()
				$(".ui-select option[value='03']").remove()
				$(".ui-select option[value='04']").remove()
				$(".ui-select option[value='05']").remove()
			}
		});
		// datepicker plugin
		$('.datepicker').datepicker().on('changeDate', function (ev) {
		$(this).datepicker('hide');
		});
		// wysihtml5 plugin on textarea
		$(".wysihtml5").wysihtml5({
		"font-styles": false
		});
		});
	div(style='display:none')
