extends ../layout

block content
	// main container
	.content
		.container-fluid
			#pad-wrapper.form-page
				.row-fluid.form-wrapper
					form
						.field-box
							label 申请人:
							input.span8(type='text', readonly='readonly', value='#{user.userName}')
						.field-box
							label 职    位:
							input.span8(type='text', readonly='readonly', value='#{roleName}')
						.field-box
							label 请假类别:
							input.span8(type='text', readonly='readonly', value='#{holidayName}')
						.field-box
							label 开始时间:
							input.span8(type='text', readonly='readonly', value='#{note.start}')
						.field-box
							label 请假时长（天）:
							input.span8(type='text', readonly='readonly', value='#{note.timeLength}')
						.field-box
							label 申请理由:
							textarea.span8(rows='4', readonly='readonly', value='#{note.reason}')
						.field-box
							a.btn.btn-primary(href='/note/destroy/#{note._id}') 结束假期
							//a的href='/user/signin'
	script(src='/js/wysihtml5-0.3.0.js')
	script(src='http://code.jquery.com/jquery-latest.js')
	script(src='/js/bootstrap.min.js')
	script(src='/js/bootstrap-wysihtml5-0.0.2.js')
	script(src='/js/bootstrap.datepicker.js')
	script(src='/js/jquery.uniform.min.js')
	script(src='/js/select2.min.js')
	script(src='/js/theme.js')
	script(type='text/javascript').
		$(function () {
			$('.arr_holiday').addClass("active");
			$('.arr_holiday').append("<div class='pointer'><div class='arrow'></div><div class='arrow_border'></div></div>");
			$('#sub').addClass("active");
			$('#reqa').addClass("active");
		});
